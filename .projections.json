{
  "src/Arkham/Types/Investigator/Cards/*.hs": {
    "type": "investigator",
    "alternate": "src/Arkham/Types/Investigator.hs",
    "template": [
      "{open}-# LANGUAGE UndecidableInstances #-{close}",
      "module Arkham.Types.Investigator.Cards.{} where",
      "",
      "import Arkham.Types.Classes",
      "import Arkham.Types.Investigator.Attrs",
      "import Arkham.Types.Investigator.Runner",
      "import Arkham.Types.Message",
      "import Arkham.Types.Stats",
      "import Arkham.Types.Token",
      "import Arkham.Types.Trait",
      "import ClassyPrelude",
      "import Data.Aeson",
      "",
      "-- TODO: Do these steps in src/Arkham/Types/Investigator.hs and delete this comment block",
      "-- 1. Add this import",
      "--",
      "--   import Arkham.Types.Investigator.Cards.{}",
      "--",
      "-- 2. Add this to @allInvestigators@",
      "--",
      "--   {} {snakecase|camelcase}",
      "--",
      "-- 3. And this to @investigatorAttrs@",
      "--",
      "--   {} attrs -> coerce attrs",
      "--",
      "-- 4. And this to @data Investigator@",
      "--",
      "--   {} {}I",
      "",
      "-- 4. And this to @instance (InvestigatorRunner env) => RunMessage env Investigator where@",
      "--",
      "--   {} x -> {} <$> runMessage msg x",
      "",
      "newtype {}I = {}I Attrs",
      "  deriving newtype (Show, ToJSON, FromJSON)",
      "",
      "{snakecase|camelcase} :: {}I",
      "{snakecase|camelcase} = {}I $ baseAttrs",
      "  \"00000\" -- TODO: replace with actual card code",
      "  \"{snakecase|blank|capitalize}\" -- TODO: fix capitalization if needed",
      "  Stats",
      "    { health = _",
      "    , sanity = _",
      "    , willpower = _",
      "    , intellect = _",
      "    , combat = _",
      "    , agility = _",
      "    }",
      "  [_] -- TODO: add traits here (e.g Miskatonic or SilverTwilight)",
      "",
      "instance (InvestigatorRunner env) => RunMessage env {}I where",
      "  runMessage msg i@({}I attrs@Attrs {open}..{close}) = case msg of",
      "    ResolveToken ElderSign iid _skillValue | iid == investigatorId -> pure i",
      "    _ -> {}I <$> runMessage msg attrs"
    ]
  }
}
